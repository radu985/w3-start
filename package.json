{
  "name": "portfolio-chat",
  "version": "1.0.0",
  "description": "Full-stack portfolio with real-time chat functionality",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:socket": "node socket/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:socket\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/init-db.js",
    "socket:dev": "node socket/server.js",
    "socket:start": "NODE_ENV=production node socket/server.js",
    "docker:build": "docker build -t portfolio-chat .",
    "docker:run": "docker run -p 3000:3000 portfolio-chat",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "setup": "npm install && npm run db:generate && npm run db:seed",
    "setup:prod": "npm install --production && npm run db:generate && npm run db:migrate:deploy"
  },
  "keywords": [
    "portfolio",
    "chat",
    "nextjs",
    "react",
    "typescript",
    "postgresql",
    "socket.io",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio-chat.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio-chat/issues"
  },
  "homepage": "https://github.com/yourusername/portfolio-chat#readme",
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@prisma/client": "^6.11.1",
    "autoprefixer": "^10.0.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.0",
    "framer-motion": "^10.16.16",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "^14.2.30",
    "node-fetch": "^3.3.2",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "20.19.1",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "prisma": "^6.11.0",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "framework": "nextjs"
}
